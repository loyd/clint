// -*- json -*-
// vim: set syntax=json

{
    "naming": {
        "global-var-prefix": "g_",
        "global-fn-prefix": "",
        "typedef-suffix": "_t",
        "struct-suffix": "_s",
        "union-suffix": "_u",
        "enum-suffix": "_e",
        "require-style": "under_score",
        "minimum-length": 3,
        "allow-short-on-top": false,
        "allow-short-in-loop": true,
        "allow-short-in-block": false,
        "disallow-leading-underscore": true
    },

    "lines": {
        "maximum-length": 80,
        "disallow-trailing-space": true,
        "require-newline-at-eof": true
    },

    "indentation": {
        "size": 4,
        "maximum-level": 4,
        "flat-switch": false
    },

    "whitespace": {
        // After `while`, `do`, `if`, `else`, `for` and `switch`.
        "after-control": true,
        // Before `while` and `else`.
        "before-control": true,
        "before-comma": false,
        "after-comma": true,
        "after-left-paren": false,
        "before-right-paren": false,
        "after-left-square": false,
        "before-right-square": false,
        "before-semicolon": false,
        "after-semicolon": true,

        "require-block-on-newline": true,
        "newline-before-members": false,
        "newline-before-block": true,
        "newline-before-control": true,
        "newline-before-fn-body": true,

        "between-unary-and-operand": false,
        "around-binary": true,
        "around-assignment": true,
        "around-accessor": false,
        "in-conditional": true,
        "after-cast": false,
        "in-call": false,
        "after-name-in-fn-def": false,
        "before-declarator-name": true,
        "before-members": true,
        "pointer-place": "declarator"
    },

    "block": {
        "disallow-empty": true,
        "disallow-short": true,
        "disallow-oneline": true,
        "require-decls-on-top": true
    },

    "runtime": {
        "require-threadsafe-fn": false,
        "require-safe-fn": true,
        "require-sized-int": true,
        "require-sizeof-as-fn": false
    }
}
